        android:label="@string/app_name"
        android:roundIcon="@mipmap/lifecat_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.BackgroundActivity"
            android:label="lifecat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.MainActivity"
            android:label="个人信息" />
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.WebActivity"
            android:label="访问服务" />
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.SettingsActivity"
            android:label="设置" />
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.UploadImage"
            android:label="选择图片" />

        <activity android:name="com.example.a59682.myapplicationtest2018421.LoginActivity" />
        <activity android:name="com.example.a59682.myapplicationtest2018421.SignupActivity" />
        <activity android:name="com.example.a59682.myapplicationtest2018421.WelcomeActivity" />
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.UploadActivity"
            android:label="上传图片" />
        <activity
            android:name="com.example.a59682.myapplicationtest2018421.PhotoActivity"
            android:label="相册Album" />

        <activity
            android:name="com.yanzhenjie.album.AlbumActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="图库"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />
    </application>

</manifest>